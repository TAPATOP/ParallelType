<link rel="stylesheet" href="~/Content/home-page-style.css" />

<div class="greeting">
    <div class="greeting-text">
        Welcome to ParallelType!
    </div>
</div>
<hr>
<div class="button-container">
    <div class="button" id="login">
        <img src="~/Content/images/login-icon.png"/>
        <div class="label">
            LOGIN
        </div>
    </div>
    <div class="button" id="register">
        <img src="~/Content/images/register-icon.png" />
        <div class="label">
            REGISTER
        </div>
    </div>
</div>

@section scripts {

<script>
	$( ".button" ).click(function() {
		var change;

		if(this.id == "register") {
			change =
			"<form id=\"register-form\" style=\"float:right\" method=\"post\" action=\"@Url.Action("Register", "Cookie")\"> \
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">Username: </div>\
			  		<input placeholder=\"Ivan Ivanovich\" name=\"username\"></input>\
			  	</div>\
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">Password: </div>\
			  		<input type=\"password\" name=\"password\"></input>\
			  	</div>\
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">Repeat password: </div>\
			  		<input type=\"password\" name=\"confirmPassword\"></input>\
			  	</div>\
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">E-mail: </div>\
			  		<input placeholder=\"name@domain.extention\" name=\"email\"></input>\
			  	</div>\
			  	<input type=\"submit\"></input>\
			</form>"
		} else {
		  	change =
		  	"<form id=\"login-form\" style=\"float:left\" method=\"post\" action=\"@Url.Action("Login", "Cookie")\"> \
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">Email: </div>\
			  		<input name=\"email\"></input>\
			  	</div>\
			  	<div class=\"field\"> \
			  		<div class=\"field-label\">Password: </div>\
			  		<input type=\"password\" name=\"password\"></input>\
			  	</div>\
			  	<input type=\"submit\"></input>\
			</form>"
		}
		debugger;
		$( this ).replaceWith(change);
	});
</script>
}